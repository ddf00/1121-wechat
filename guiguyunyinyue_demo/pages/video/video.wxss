
.videoContainer .header {
  display: flex;
  padding: 5rpx 10rpx;
}
.videoContainer .header image {
  width: 60rpx;
  height: 60rpx;

}

.videoContainer .header input {
  flex: 2;
  border: 1rpx solid #eee;
  height: 60rpx;
  box-sizing: border-box;
  margin: 0 10rpx;
  /*text-align: center;*/
}


.videoContainer .header .placeholder{
  font-size: 28rpx;
  color: #d43c33;
  text-align: center;
}



/* 导航区域  */
.navScroll {
  display: flex;
  white-space: nowrap;
  height: 120rpx;
}
.navItem {
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 20rpx;
}

.navItem.active {
  border-bottom: 1rpx solid #d43c33;
}


/* 视频内容区 */
.videoList {
  height: calc(100vh - 190rpx) /*CSS3新特性： calc用于动态计算宽高*/
}

.videoItem {
  padding: 0 3%;
}


.videoList .common {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}


