.songContainer {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.keng {
  position: relative;
  z-index: 100;
  width: 60rpx;
  height: 60rpx;
  background: #fff;
  border-radius: 50%;
  margin: 10rpx 0;

}
/* 摇杆 */
.needle {
  position: relative;
  z-index: 99;
  left: 60rpx;
  top: -40rpx;
  width: 192rpx;
  height: 274rpx;
  /*border: 1rpx solid red;*/
  /* 设置旋转的中心点 */
  transform-origin: 40rpx 0;
  transform: rotate(-20deg);
  transition: transform 1s;
}


.needle.needleRotate {
  transform: rotate(0deg);
}

.discContainer {
  position: relative;
  top: -170rpx;
  z-index: 1;
  width: 598rpx;
  height: 598rpx;
}
.discContainer.discAnimation {
  animation: discAni 4s linear infinite;
  animation-delay: 1s;
}


/*
@keyframes
  1. 作用： 用来设置动画的帧数，及动画动作内容
  2. 方式：
    1) 只有2动画帧： from to
    2) 动画较为复杂，帧数比较多的时候： 百分比 0-100%


*/
@keyframes discAni {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}


.disc {
  width: 100%;
  height: 100%;
}


.musicImg {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  width: 370rpx;
  height: 370rpx;
  border-radius: 50%;
}



/* musicControl */
.musicControl {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #fff;
}

.musicControl text {
  width: 20%;
  text-align: center;
  font-size: 50rpx;
  color: #fff;
  height: 120rpx;
  line-height: 120rpx;
}
.musicControl text.big {
  font-size: 80rpx;
}
